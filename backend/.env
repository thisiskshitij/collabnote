# .env (in the backend directory)

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_super_secret_key_here # Replace with a complex key

# PostgreSQL Database Configuration (Replace with your credentials)
DB_USER=your_pg_username
DB_PASS=your_pg_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=collabnote_db

# Construct the SQLAlchemy Database URI
DATABASE_URL=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}